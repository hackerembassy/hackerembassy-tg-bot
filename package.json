{
  "name": "hacker-embassy-bot",
  "version": "2.0.0",
  "description": "Hacker Embassy management bot",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start-background": "nohup node app.js &",
    "start-service": "node embassyApi.js",
    "start-service-background": "nohup node embassyApi.js &",
    "embassy-api-service": "/usr/bin/node embassyApi.js",
    "dev": "nodemon app.js",
    "dev-service": "nodemon embassyApi.js",
    "dev-both": "run-p dev-bot dev-service",
    "stop-embassy-api": "skill -c 'nohup node embassyApi.js &'",
    "git": "git add * && git commit && git push",
    "git-redo": "git add * && git commit --amend && git push --force",
    "update-and-start": "npm run kill && git pull && npm i && npm run start-bot-background",
    "start-api-https": "sudo caddy start --config ./deploy/api/Caddyfile 2>/dev/null",
    "kill": "skill -c nohup node app.js &",
    "backup": "mkdir ./data/backup -p && cp ./data/db/data.db ./data/backup/data`date +\"%H%M%S%m%d%Y\"`.db 2>/dev/null",
    "reset": "mkdir ./data/backup -p && mv ./data/data.db ./data/backup/data`date +\"%H%M%S%m%d%Y\"`.db 2>/dev/null && cp ./data/sample.db ./data/data.db",
    "init": "./deploy/dev/init.sh",
    "prepare": "husky install",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint --fix src/**/*.js",
    "pretty": "prettier --write 'src/**/*.js'"
  },
  "author": "Nick Kiselev",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^8.0.1",
    "body-parser": "^1.20.1",
    "chartjs-to-image": "^1.1.0",
    "config": "^3.3.8",
    "cors": "^2.8.5",
    "crypto-convert": "^2.1.4",
    "d": "^1.0.1",
    "dotenv": "^16.0.3",
    "easy-currencies": "^1.7.0",
    "express": "^4.18.2",
    "fast-csv": "^4.3.6",
    "local-devices": "^4.0.0",
    "luci-rpc": "^1.0.5",
    "mqtt": "^4.3.7",
    "node-fetch": "^2.6.8",
    "node-rsa": "^1.1.1",
    "node-ssh": "^13.1.0",
    "node-telegram-bot-api": "^0.60.0",
    "nodemon": "^2.0.20",
    "ping": "^0.4.4",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  }
}
